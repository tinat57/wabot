<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container text-center">
        <div class="row justify-content-around">
            <a href="/" class="col-3 btn btn-success">QR CODE</a>
            <a href="/show" class="col-3 btn btn-success">SHOW MESSAGE</a>
            <a href="/number" class="col-3 btn btn-success">SHOW NUMBER</a>
        </div>
    </div>
    <div class="container">
        <form method="POST" action="/insert">
            <div>
                <label><b>Key</b></label>
                <input type="text" name="key" class="form-control">
            </div>
            <div>
                <label><b>Meg</b></label>
                <input type="text" name="meg" class="form-control">
            </div>
            <input type="submit" name="insert" value="insert" class="btn btn-primary">
        </form>
    </div>
    <div class="container">
        <form method="post" action="/file" enctype="multipart/form-data">
            <div>
                <label for="formFileLg" class="form-label"><b>file</b></label>
                <input class="form-control form-control-lg" type="file" name="file">
            </div>
            <input type="submit" value="upload" class="btn btn-primary">
        </form>
    </div>
    
    <div class="row">
        <% file.forEach((file)=>{if(file.split('.').pop() == 'jpg'){%>
        <div class="col-md-3 thumbrail">
            <h3><a href="/fdel/<%= file %>" class="btn btn-danger"><%= file %></a></h3>
            <img src="/<%= file %>" height="300" width="300" alt="">
        </div>
        <% }else{ %>
        <div class="col-md-3 thumbrail"> 
            <h3><a href="/fdel/<%= file %>" class="btn btn-danger"><%= file %></a></h3> 
            <video src="/<%= file %>" height="300" width="300" alt="">
        </div>
        <% }}) %>
    </div>

</body>
</html>