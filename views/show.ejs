<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container text-center">
        <div class="row justify-content-around">
            <a href="/" class="col-3 btn btn-success">QR CODE</a>
            <a href="/insert" class="col-3 btn btn-success">INSERT MESSAGE</a>
            <a href="/number" class="col-3 btn btn-success">SHOW NUMBER</a>
        </div>
    </div>
    <div class="container">
        <table class="table table-border table-bordered text-center shadow">
            <tr>
                <th>KEY</th>
                <th>MESSAGE</th>
                <th>DELETE</th>
                <th>UPDATE</th>
            </tr>
            <% meg.forEach((meg)=>{ %>
            <tr>
                <td><%= meg.key %></td>
                <td><%= meg.meg %></td>
                <td><a href="/delete/<%= meg._id %>" class="btn btn-danger">DELETE</a></td>
                <td><a href="/edit/<%= meg._id %>" class="btn btn-success">EDIT</a></td>
            </tr>
            <% }) %>
        </table>
    </div>
    
</body>
</html>